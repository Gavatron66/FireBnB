@page
@model FireBnBWeb.Pages.UserProfiles.UpsertModel
@{
}

<style>
    .details {
        padding-top: 5px;
        padding-bottom: 5px;
    }
</style>
<form method="post" asp-page="Upsert" enctype="multipart/form-data">
    <input asp-for="@Model.UserId" hidden />
    <input asp-for="@Model.ProfilePictureUrl" hidden />
    <div class="col-9 border backgroundWhite container">
        <!-- Profile overview -->
        <div id="ProfileImg" class="container col-12 float-start border backgroundRed" style="border-radius:15px;padding:10px;">
            <!-- Display user's full name -->
            <h2 class="text-primary" style="text-align:left;">@Model.FullName</h2>
            <label id="ProfilePictureUrl" class="details"><img src="@Model.ProfilePictureUrl" alt="Profile Picture" style="max-width: 100px; max-height: 100px;" /></label><br />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.FirstName"></label>
            <input id="txtFirstName" asp-for="@Model.FirstName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.LastName"></label>
            <input id="txtLastName" asp-for="@Model.LastName" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label asp-for="@Model.Email"></label>
            <input id="txtEmail" asp-for="@Model.Email" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label asp-for="@Model.PhoneNumber"></label>
            <input id="txtPhoneNumber" asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label asp-for="@Model.DisplayName"></label>
            <input id="txtDisplayName" asp-for="@Model.DisplayName" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label asp-for="@Model.Birthdate"></label>
            <input id="txtBirthdate" asp-for="@Model.Birthdate" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label asp-for="@Model.SignupDate"></label>
            <input id="txtSignupDate" asp-for="@Model.SignupDate" class="form-control" />
        </div>
    </div>
</form>

<div class="col-4 btn-group" role="group">
    <a asp-page="Index" asp-route-id="@Model.UserId" class="btn btn-primary mx-2">
        <i class="bi bi-pencil-square"></i> Confirm Account Details
    </a>
</div>
