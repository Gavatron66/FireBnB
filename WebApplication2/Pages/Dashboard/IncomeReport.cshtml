@page
@model FireBnBWeb.Pages.Dashboard.IncomeReportModel
@{
    ViewData["Title"] = "Income Report";
}

<h1>Income Report</h1>

@if (Model.PropertyList != null && Model.PropertyList.Any())
{
    <h4>Properties Owned by You:</h4>
    <ul>
        @foreach (var property in Model.PropertyList)
        {
            <li>@property.Title</li>
        }
    </ul>
}

@if (Model.BookingList != null && Model.BookingList.Any())
{
    <h5>Bookings for Your Properties:</h5>
    <table>
        <thead>
            <tr>
                <th>Property</th>
                <th>Check-in</th>
                <th>Check-out</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.BookingList)
            {
                <tr>
                    <td>@booking.Property.Title</td>
                    <td>@booking.Checkin.ToShortDateString()</td>
                    <td>@booking.Checkout.ToShortDateString()</td>
                    <td>@booking.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

<h5>Total Income: @Model.TotalIncome.ToString("C")</h5>
