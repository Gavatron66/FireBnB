@page
@model FireBnBWeb.Pages.Dashboard.Properties.PayPerNightModel
@{
}
<div>
@if (Model.objNightlyPriceList != null)
{
	<h3>List of current Prices per night</h3>
	@foreach (var price in Model.objNightlyPriceList)
	{
		<p>From @price.StartDate to @price.EndDate</p>
		<p>The rate is @price.Rate</p>
	}
}
</div>
<form method="post">
	<div>
		

		<input asp-for="objNightPrice.StartDate" />
		<label asp-for="objNightPrice.StartDate" />

		<input asp-for="objNightPrice.EndDate" />
		<label asp-for="objNightPrice.EndDate" />

		<input asp-for="objNightPrice.Rate" />
		<label asp-for="objNightPrice.Rate" />
		<input asp-for="objNightPrice.PropertyId" type="hidden" value="@Model.propertyid"/>
	</div>
	<div class="col-6 col-md-3">
		<button type="submit" class="btn btn-primary form-control">Create</button>
		
	</div>
</form>
<div>
	<a asp-page="PropImage" asp-route-id="@Model.propertyid" class="btn btn-outline-primary border form-control">Add Images</a>
	<a asp-page="/Dashboard/Properties/UpsertProperty" asp-route-id="@Model.propertyid" class="btn btn-primary mb-3">
		<h4 class="card-title">Back to Property</h4>
	</a>
</div>
