@page
@model FireBnBWeb.Pages.Dashboard.UpsertPropertyModel
@{
    ViewData["Title"] = "UpsertProperty";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">@(Model.objproperty.Id != 0 ? "Update " : "Create ") Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <input asp-for="objproperty.ListerId"type="hidden" value="@Model.UserId"/>
                <input asp-for="objproperty.Status" type="hidden" value="1"/>
                <input asp-for="objproperty.LastUpdated" type="hidden" value="@Model.dateTime"/>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objproperty.Title" class="form-control border-0 shadow" />
                    <label asp-for="objproperty.Title" class="ms-2">Property Description</label>
                    <span asp-validation-for="objproperty.Title" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objproperty.Description" class="form-control border-0 shadow" />
                    <label asp-for="objproperty.Description" class="ms-2">Property Description</label>
                    <span asp-validation-for="objproperty.Description" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objproperty.BedroomNum" class="form-control border-0 shadow" />
                    <label asp-for="objproperty.BedroomNum" class="ms-2">Bedroom Number</label>
                    <span asp-validation-for="objproperty.BedroomNum" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objproperty.BathroomNum" class="form-control border-0 shadow" />
                    <label asp-for="objproperty.BathroomNum" class="ms-2">Bathroom Number</label>
                    <span asp-validation-for="objproperty.BathroomNum" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objproperty.GuestMax" class="form-control border-0 shadow" />
                    <label asp-for="objproperty.GuestMax" class="ms-2">Guest Max</label>
                    <span asp-validation-for="objproperty.GuestMax" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objproperty.CancellationDays" class="form-control border-0 shadow" />
                    <label asp-for="objproperty.CancellationDays" class="ms-2">Cancellation Days</label>
                    <span asp-validation-for="objproperty.CancellationDays" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <h5>Amenities</h5>
                    @foreach (var items in Model.amenity)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                @items.AmenityName
                            </label>
                        </div>
                    }
                </div>
                @* <div class="form-floating py-2 col-12">
                <h5>Bed Configurations</h5>
                @foreach (var items in Model.amenity)
                {
                <div class="form-check">
                <input class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                @items.AmenityName
                </label>
                </div>
                }
                </div> *@
                <div class="form-floating py-2 col-12">
                    <h5>Type</h5>
                    @foreach (var items in Model.TypeList)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="@items.Id">
                            <label class="form-check-label" for="flexCheckDefault">
                                @items.Title
                            </label>
                        </div>
                    }
                </div>

                @if (Model.objproperty.Id != 0)
                {
                    <input asp-for="objproperty.Id" type="hidden">
                }
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">@(Model.objproperty.Id != 0 ? "Update " : "Create ")</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>